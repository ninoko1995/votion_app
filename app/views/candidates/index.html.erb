<%= render "layouts/header" %>
<h1>投資金額一覧</h1>
<table style="text-align:center;">
    <tr>
      <th>名前</th>
      <th>獲得額</th>
      <th>投票数</th>
    </tr>
    <% @candidates.each do |candidate| %>
    <tr>
      <td><%= candidate.name %></td>
      <td><%= candidate.money %></td>
      <td><%= candidate.liking %></td>
    </tr>
    <% end %>
</table>