<h1><%= @user.name %>さんの投資先一覧</h1>
<table style="text-align:center;">
    <tr>
      <th>投資先</th>
      <th>投資額</th>
      <!-- <th>投票先</th> -->
    </tr>
    <% @investments.each do |investment| %>
    <% candidate = Candidate.find(investment.candidate_id) %>
    <tr>
      <td><%= candidate.name %></td>
      <td><%= investment.money %></td>
    </tr>
    <% end %>
</table>
<% if current_user.id == @user.id %>
<%= link_to "edit",edit_investment_path(@user),class:"btn btn-primary" %>
<% end %>
<% if current_user.admin == true %>
<%= link_to "delete",user_path(@user),method: :delete,class:"btn btn-primary",data: { confirm: "You sure?" } %>
<% end %>
